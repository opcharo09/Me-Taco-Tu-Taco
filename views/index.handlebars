
<h1>Me Taco Tu Taco</h1>


<ul>
  {{#each tacos}}
    <li>
      <p><span class="label">taco_name</span>{{this.taco_name}}</p>
      <p><span class="label">Shell</span>{{this.shell}}</p>
      <p><span class="label">Vegeterian</span>{{this.vegeterian}}</p>
  
      <button class="pickup-taco" data-id="{{this.id}}">Picked up</button
    </li>
  {{/each}}
</ul>

<h2>Add a Taco</h2>
<form class="create_form">

      <div class="form-group">
    <label for="taco">Taco Name:</label>
    <input type="text" id="taco" name="name">
  </div>

  <div class="form-group">
    <label for="shell">Shell Type:</label><br>
    <input type="radio" name="shell" value="hard" checked> hard Shell<br>
    <input type="radio" name="shell" value="Soft">Soft Shell
  </div>

  <div class="form-group">
    <label for="veg">Vegetarian?</label><br>
    <input type="radio" name="veg" value="1" checked> Yes<br>
    <input type="radio" name="veg" value="0"> No
  </div>

  <button type="submit">Add Taco</button>
</form>